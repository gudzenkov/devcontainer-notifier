{
  "name": "devcontainers-notifier",
  "displayName": "Dev Containers Notifier",
  "description": "Send native macOS notifications from Dev Containers",
  "version": "0.0.11",
  "publisher": "touyu",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "extensionKind": [
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/touyu/devcontainers-notifier"
  },
  "contributes": {
    "configuration": {
      "title": "Dev Containers Notifier",
      "properties": {
        "devcontainers-notifier.port": {
          "type": "number",
          "default": 3456,
          "description": "HTTP server port for notifications"
        },
        "devcontainers-notifier.sound": {
          "type": "string",
          "default": "Funk",
          "enum": [
            "Basso",
            "Blow",
            "Bottle",
            "Frog",
            "Funk",
            "Glass",
            "Hero",
            "Morse",
            "Ping",
            "Pop",
            "Purr",
            "Sosumi",
            "Submarine",
            "Tink"
          ],
          "description": "macOS notification sound"
        },
        "devcontainers-notifier.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Dev Containers Notifier for this workspace"
        }
      }
    }
  },
  "scripts": {
    "package": "mkdir -p dist && npx --yes @vscode/vsce package --out dist/devcontainers-notifier-$npm_package_version.vsix",
    "build": "npm install && npm run package",
    "install-extension": "code --install-extension dist/devcontainers-notifier-$npm_package_version.vsix --force",
    "publish": "npx --yes @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "node-notifier": "^10.0.1"
  }
}
